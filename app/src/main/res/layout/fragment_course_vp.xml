<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_backFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CourseVPFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp" />

    <cu.fiai.uci.somosuci.views.viewpagerindicator.ViewPagerIndicator
        android:id="@+id/_vpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="2dp"
        app:delimiterSize="4dp"
        app:itemIcon="@drawable/ic_fig_indicator_circle"
        app:itemScale="3"
        app:itemSelectedTint="@color/colorPrimaryDark"
        app:itemSize="3dp"
        app:itemTint="@android:color/darker_gray" />

</FrameLayout>

